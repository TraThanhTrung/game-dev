@page
@model GameServer.Areas.Admin.Pages.Checkpoints.CreateModel
@{
    ViewData["Title"] = "Create Checkpoint";
}

<div class="page-header">
    <h3 class="page-title">Create Checkpoint</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Checkpoints/Index">Checkpoints</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Checkpoint Information</h4>
                <form method="post" class="forms-sample">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Checkpoint.CheckpointName">Checkpoint Name *</label>
                        <input asp-for="Checkpoint.CheckpointName" class="form-control" placeholder="checkpoint_1" />
                        <span asp-validation-for="Checkpoint.CheckpointName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Checkpoint.SectionId">GameSection *</label>
                        <select asp-for="Checkpoint.SectionId" class="form-control" required>
                            <option value="">-- Select GameSection --</option>
                            @foreach (var s in Model.GameSections)
                            {
                                <option value="@s.SectionId" selected="@(Model.Checkpoint.SectionId == s.SectionId)">
                                    @s.Name @(s.Description != null ? $"({s.Description})" : "")
                                </option>
                            }
                        </select>
                        <span asp-validation-for="Checkpoint.SectionId" class="text-danger"></span>
                        <small class="form-text text-muted">Select the GameSection (map/scene) this checkpoint belongs to</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Checkpoint.X">Position X *</label>
                                <input asp-for="Checkpoint.X" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="Checkpoint.X" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Checkpoint.Y">Position Y *</label>
                                <input asp-for="Checkpoint.Y" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="Checkpoint.Y" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Checkpoint.EnemyPool">Enemy Pool (JSON Array) *</label>
                        <input asp-for="Checkpoint.EnemyPool" class="form-control" placeholder='["slime", "goblin", "slime"]' />
                        <small class="form-text text-muted">JSON array of enemy type IDs, e.g., ["slime", "goblin"]</small>
                        <span asp-validation-for="Checkpoint.EnemyPool" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Checkpoint.MaxEnemies">Max Enemies *</label>
                        <input asp-for="Checkpoint.MaxEnemies" class="form-control" type="number" min="1" value="1" />
                        <span asp-validation-for="Checkpoint.MaxEnemies" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input asp-for="Checkpoint.IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Checkpoint.IsActive" class="form-check-label">Active</label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a asp-page="./Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
