@page
@model GameServer.Areas.Admin.Pages.Matches.IndexModel
@{
    ViewData["Title"] = "Match History";
}

<div class="page-header">
    <h3 class="page-title">Match History</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Index">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Match History</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Matches List</h4>
                <form method="get" class="mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <label>From Date</label>
                            <input type="date" name="fromDate" class="form-control"
                                value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="col-md-4">
                            <label>To Date</label>
                            <input type="date" name="toDate" class="form-control"
                                value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="col-md-2">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-primary d-block">Filter</button>
                        </div>
                        @if (Model.FromDate.HasValue || Model.ToDate.HasValue)
                        {
                            <div class="col-md-2">
                                <label>&nbsp;</label>
                                <a asp-area="Admin" asp-page="/Matches/Index" class="btn btn-secondary d-block">Clear</a>
                            </div>
                        }
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Session ID</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Player Count</th>
                                <th>Status</th>
                                <th>Duration</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var match in Model.Matches)
                            {
                                var duration = match.EndTime.HasValue
                                ? (match.EndTime.Value - match.StartTime).ToString(@"hh\:mm\:ss")
                                : "Ongoing";

                                <tr>
                                    <td>@match.SessionId.ToString("N")[..8]...</td>
                                    <td>@match.StartTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@(match.EndTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</td>
                                    <td>@match.PlayerCount</td>
                                    <td>
                                        @if (match.Status == "Active")
                                        {
                                            <span class="badge badge-warning">@match.Status</span>
                                        }
                                        else if (match.Status == "Completed")
                                        {
                                            <span class="badge badge-success">@match.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">@match.Status</span>
                                        }
                                    </td>
                                    <td>@duration</td>
                                    <td>
                                        <a asp-area="Admin" asp-page="/Matches/Details" asp-route-id="@match.SessionId"
                                            class="btn btn-sm btn-primary">
                                            <i class="mdi mdi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)"
                                        asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                        asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")">Previous</a>
                                </li>
                            }
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-route-page="@i"
                                        asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                        asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")">@i</a>
                                </li>
                            }
                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)"
                                        asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                        asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
                <p class="text-muted">Total: @Model.TotalMatches matches</p>
            </div>
        </div>
    </div>
</div>
