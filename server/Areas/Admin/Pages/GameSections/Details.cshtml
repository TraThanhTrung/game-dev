@page "{id:int}"
@model GameServer.Areas.Admin.Pages.GameSections.DetailsModel
@{
    ViewData["Title"] = "Game Section Details";
}

@if (Model.GameSection == null)
{
    <div class="alert alert-danger">Game Section not found.</div>
    return;
}

<div class="page-header">
    <h3 class="page-title">Game Section Details</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Admin/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="/Admin/GameSections/Index">Game Sections</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Game Section Information</h4>
                
                <div class="form-group">
                    <label>ID</label>
                    <p class="form-control-static">@Model.GameSection.SectionId</p>
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <p class="form-control-static">@Model.GameSection.Name</p>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <p class="form-control-static">@(Model.GameSection.Description ?? "N/A")</p>
                </div>
                <div class="form-group">
                    <label>Enemy Type ID</label>
                    <p class="form-control-static">@(Model.GameSection.EnemyTypeId ?? "N/A")</p>
                </div>
                <div class="form-group">
                    <label>Enemy Count</label>
                    <p class="form-control-static">@Model.GameSection.EnemyCount</p>
                </div>
                <div class="form-group">
                    <label>Enemy Level</label>
                    <p class="form-control-static">@Model.GameSection.EnemyLevel</p>
                </div>
                <div class="form-group">
                    <label>Spawn Rate</label>
                    <p class="form-control-static">@Model.GameSection.SpawnRate</p>
                </div>
                <div class="form-group">
                    <label>Duration</label>
                    <p class="form-control-static">@(Model.GameSection.Duration.HasValue ? $"{Model.GameSection.Duration}s" : "Unlimited")</p>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <p class="form-control-static">
                        @if (Model.GameSection.IsActive)
                        {
                            <span class="badge badge-success">Active</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Inactive</span>
                        }
                    </p>
                </div>
                <div class="form-group">
                    <label>Created At</label>
                    <p class="form-control-static">@Model.GameSection.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                </div>
                @if (Model.GameSection.UpdatedAt.HasValue)
                {
                    <div class="form-group">
                        <label>Updated At</label>
                        <p class="form-control-static">@Model.GameSection.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    </div>
                }
                
                <div class="mt-3">
                    <a asp-page="/Admin/GameSections/Edit" asp-route-id="@Model.GameSection.SectionId" class="btn btn-primary me-2">
                        <i class="mdi mdi-pencil"></i> Edit
                    </a>
                    <a asp-page="/Admin/GameSections/Index" class="btn btn-light">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

