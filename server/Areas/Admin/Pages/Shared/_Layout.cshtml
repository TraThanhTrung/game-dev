<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Tiny World</title>

    <!-- plugins:css -->
    <link rel="stylesheet" href="~/admin/dist/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/dist/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/admin/dist/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/admin/dist/assets/vendors/font-awesome/css/font-awesome.min.css">
    <!-- endinject -->

    <!-- Layout styles -->
    <link rel="stylesheet" href="~/admin/dist/assets/css/style.css">
    <!-- Custom admin styles -->
    <link rel="stylesheet" href="~/admin/dist/assets/css/admin-custom.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/admin/dist/assets/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <!-- Sidebar -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                        <a class="sidebar-brand brand-logo" asp-area="Admin" asp-page="/Index"
                            style="text-decoration: none; display: flex; align-items: center; justify-content: center; width: 100%; padding: 15px 20px;">
                            <span
                                style="font-size: 22px; font-weight: 700; letter-spacing: 1.2px; color: #2c3e50; text-align: center; line-height: 1.2; white-space: nowrap;">Tiny
                                World</span>
                        </a>
                        <a class="sidebar-brand brand-logo-mini" asp-area="Admin" asp-page="/Index"
                            style="text-decoration: none; display: flex; align-items: center; justify-content: center; width: 100%; padding: 15px;">
                            <div
                                style="width: 32px; height: 32px; border-radius: 6px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; box-shadow: 0 2px 4px rgba(102, 126, 234, 0.3);">
                                <i class="mdi mdi-earth" style="font-size: 18px; color: #ffffff;"></i>
                            </div>
                        </a>
            </div>
            <ul class="nav">
                <li class="nav-item profile">
                    <div class="profile-desc">
                        <div class="profile-pic">
                            <div class="count-indicator">
                                <img class="img-xs rounded-circle" src="~/admin/dist/assets/images/faces/face15.jpg"
                                    alt="">
                                <span class="count bg-success"></span>
                            </div>
                            <div class="profile-name">
                                <h5 class="mb-0 font-weight-normal">@User.Identity?.Name</h5>
                                <span>Administrator</span>
                            </div>
                        </div>
                        <a href="#" id="profile-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="mdi mdi-dots-vertical"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right sidebar-dropdown preview-list"
                            aria-labelledby="profile-dropdown">
                            <h6 class="p-3 mb-0">Profile</h6>
                            <div class="dropdown-divider"></div>
                            <form id="logoutFormSidebar" method="post" action="/Admin/Logout">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item preview-item"
                                    style="cursor: pointer; display: flex; align-items: center; margin: 5px; border: none; background: none; width: 100%; text-align: left; padding: 0.5rem 1rem;">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-dark rounded-circle">
                                            <i class="mdi mdi-logout text-danger"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content">
                                        <p class="preview-subject ellipsis mb-1 text-small">Log out</p>
                                    </div>
                                </button>
                            </form>
                        </div>
                    </div>
                </li>
                <li class="nav-item nav-category">
                    <span class="nav-link">Navigation</span>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Admin" asp-page="/Index">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Admin" asp-page="/Users/Index">
                        <span class="menu-icon">
                            <i class="mdi mdi-account-multiple"></i>
                        </span>
                        <span class="menu-title">Users</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" data-bs-toggle="collapse" href="#game-management" aria-expanded="false"
                        aria-controls="game-management">
                        <span class="menu-icon">
                            <i class="mdi mdi-gamepad-variant"></i>
                        </span>
                        <span class="menu-title">Game Management</span>
                        <i class="menu-arrow"></i>
                    </a>
                    <div class="collapse" id="game-management">
                        <ul class="nav flex-column sub-menu">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-page="/Enemies/Index">Enemies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-page="/GameSections/Index">Game Sections</a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Admin" asp-page="/Matches/Index">
                        <span class="menu-icon">
                            <i class="mdi mdi-trophy"></i>
                        </span>
                        <span class="menu-title">Match History</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Admin" asp-page="/Sessions/Index">
                        <span class="menu-icon">
                            <i class="mdi mdi-play-circle"></i>
                        </span>
                        <span class="menu-title">Active Sessions</span>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- End Sidebar -->

        <div class="container-fluid page-body-wrapper">
            <!-- Navbar -->
            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" asp-area="Admin" asp-page="/Index">
                        <img src="~/admin/dist/assets/images/logo-mini.svg" alt="logo" />
                    </a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button"
                        data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>
                    <ul class="navbar-nav w-100">
                        <li class="nav-item w-100">
                            <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                                <input type="text" id="navbarSearch" name="search" class="form-control"
                                    placeholder="Search..." autocomplete="off">
                            </form>
                        </li>
                    </ul>
                    <ul class="navbar-nav navbar-nav-right">
                        <li class="nav-item dropdown">
                            <a class="nav-link" id="profileDropdown" href="#" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <div class="navbar-profile">
                                    <img class="img-xs rounded-circle" src="~/admin/dist/assets/images/faces/face15.jpg"
                                        alt="">
                                    <p class="mb-0 d-none d-sm-block navbar-profile-name">@User.Identity?.Name</p>
                                    <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end navbar-dropdown preview-list"
                                aria-labelledby="profileDropdown">
                                <h6 class="p-3 mb-0">Profile</h6>
                                <div class="dropdown-divider"></div>
                                <form id="logoutFormNavbar" method="post" action="/Admin/Logout">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item preview-item"
                                        style="cursor: pointer; display: flex; align-items: center; margin: 5px; border: none; background: none; width: 100%; text-align: left; padding: 0.5rem 1rem;">
                                        <div class="preview-thumbnail">
                                            <div class="preview-icon bg-dark rounded-circle">
                                                <i class="mdi mdi-logout text-danger"></i>
                                            </div>
                                        </div>
                                        <div class="preview-item-content">
                                            <p class="preview-subject mb-1">Log out</p>
                                        </div>
                                    </button>
                                </form>
                            </div>
                        </li>
                    </ul>
                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
                        data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>
            <!-- End Navbar -->

            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <!-- content-wrapper ends -->
                <!-- Footer -->
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">
                            Copyright Â© 2026 Game Server ( Tiny World ). All rights reserved.
                        </span>
                    </div>
                </footer>
                <!-- End Footer -->
            </div>
            <!-- main-panel ends -->
        </div>
    </div>

    <!-- plugins:js -->
    <script src="~/admin/dist/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- CRITICAL: Clear all nav active states BEFORE any other scripts run -->
    <script>
        // This runs immediately when script loads, before jQuery ready
        (function () {
            if (typeof jQuery !== 'undefined') {
                jQuery(function ($) {
                    var sidebar = $('.sidebar');
                    if (sidebar.length) {
                        // Clear ALL active states immediately
                        $('.nav li', sidebar).removeClass('active');
                        $('.nav li a', sidebar).removeClass('active');
                        $('.collapse', sidebar).removeClass('show');
                    }
                });
            }
        })();
    </script>
    <!-- inject:js -->
    <script src="~/admin/dist/assets/js/off-canvas.js"></script>
    <!-- Custom admin navigation handler (MUST load before misc.js) -->
    <script src="~/admin/dist/assets/js/admin-navigation.js"></script>
    <script src="~/admin/dist/assets/js/misc.js"></script>
    <script src="~/admin/dist/assets/js/settings.js"></script>
    <script src="~/admin/dist/assets/js/todolist.js"></script>
    <!-- Force re-apply navigation active state after all scripts load -->
    <script>
        (function () {
            function reapplyNav() {
                if (typeof window.applyAdminNavActiveState === 'function') {
                    window.applyAdminNavActiveState();
                }
            }

            // Re-apply multiple times to ensure we override misc.js
            jQuery(document).ready(function () {
                reapplyNav(); // Immediate
                setTimeout(reapplyNav, 50);
                setTimeout(reapplyNav, 150);
                setTimeout(reapplyNav, 300);
                setTimeout(reapplyNav, 500);
            });

            // Also re-apply on page load complete
            jQuery(window).on('load', function () {
                setTimeout(reapplyNav, 100);
            });
        })();
    </script>
    <!-- endinject -->

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
