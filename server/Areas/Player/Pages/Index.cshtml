@page
@model GameServer.Areas.Player.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-4">
    <div>
        <h1 class="mb-0">
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
        </h1>
        <p style="color:white !important;" class="text-muted mb-0">Welcome back, <span class="player-name">@Model.Profile?.Name</span>!</p>
    </div>
</div>

@if (Model.Profile != null)
{
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div style="color:white !important;" class="stat-label">Level</div>
                        <div class="stat-value">@Model.Profile.Level</div>
                        <div class="text-muted small mt-2">
                            <i class="fas fa-star me-1"></i>@Model.Profile.Exp / @Model.Profile.ExpToLevel EXP
                        </div>
                    </div>
                    <div class="text-center">
                        <i class="fas fa-level-up-alt fa-3x" style="color: var(--gaming-primary); opacity: 1;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card success">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div style="color:white !important;" class="stat-label">Gold</div>
                        <div class="stat-value" style="color: var(--gaming-accent);">@Model.Profile.Gold.ToString("N0")</div>
                        <div class="text-muted small mt-2">
                            <i class="fas fa-coins me-1"></i>Currency
                        </div>
                    </div>
                    <div class="text-center">
                        <i class="fas fa-coins fa-3x" style="color: var(--gaming-accent); opacity: 1;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card info">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div style="color:white !important;" class="stat-label">Total Matches</div>
                        <div class="stat-value">@Model.TotalMatches</div>
                        <div class="text-muted small mt-2">
                            <i class="fas fa-gamepad me-1"></i>Games Played
                        </div>
                    </div>
                    <div class="text-center">
                        <i class="fas fa-gamepad fa-3x" style="color: var(--gaming-primary); opacity: 1;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card warning">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div style="color:white !important;" class="stat-label">Play Time</div>
                        <div class="stat-value" style="color: var(--gaming-accent);">
                            @{
                                var hours = Model.TotalPlayTime / 3600;
                                var minutes = (Model.TotalPlayTime % 3600) / 60;
                            }
                            @if (hours > 0)
                            {
                                <text>@hours<span style="font-size: 1.5rem;">h</span> @minutes<span style="font-size: 1.5rem;">m</span></text>
                            }
                            else
                            {
                                <text>@minutes<span style="font-size: 1.5rem;">m</span></text>
                            }
                        </div>
                        <div class="text-muted small mt-2">
                            <i class="fas fa-clock me-1"></i>Total Time
                        </div>
                    </div>
                    <div class="text-center">
                        <i class="fas fa-clock fa-3x" style="color: var(--gaming-accent); opacity: 1;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Experience Progress -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-star me-2"></i>Experience Progress
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <div>
                            <h3 class="mb-0" style="color: var(--gaming-primary);">Level @Model.Profile.Level</h3>
                            <small class="text-muted">Next Level: @(Model.Profile.Level + 1)</small>
                        </div>
                        <div class="text-end">
                            <div class="stat-value" style="font-size: 1.5rem; margin: 0;">
                                @Model.Profile.Exp / @Model.Profile.ExpToLevel
                            </div>
                            <small class="text-muted">EXP</small>
                        </div>
                    </div>
                    <div class="progress">
                        @{
                            var expPercent = Model.Profile.ExpToLevel > 0 
                                ? (int)((double)Model.Profile.Exp / Model.Profile.ExpToLevel * 100) 
                                : 0;
                        }
                        <div class="progress-bar" role="progressbar" 
                             style="width: @expPercent%" 
                             aria-valuenow="@expPercent" 
                             aria-valuemin="0" 
                             aria-valuemax="100">
                            <strong>@expPercent%</strong>
                        </div>
                    </div>
                    <div class="mt-2 text-center">
                        <small class="text-muted">
                            @(Model.Profile.ExpToLevel - Model.Profile.Exp) EXP needed to reach Level @(Model.Profile.Level + 1)
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats & Activity -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-user me-2"></i>Player Stats
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <td><strong><i class="fas fa-sword me-2" style="color: var(--gaming-secondary);"></i>Damage:</strong></td>
                            <td class="text-end">
                                <span class="badge bg-primary">@Model.Profile.Stats.Damage</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong><i class="fas fa-bullseye me-2" style="color: var(--gaming-primary);"></i>Range:</strong></td>
                            <td class="text-end">
                                <span class="badge bg-primary">@Model.Profile.Stats.Range.ToString("F1")</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong><i class="fas fa-running me-2" style="color: var(--gaming-success);"></i>Speed:</strong></td>
                            <td class="text-end">
                                <span class="badge bg-success">@Model.Profile.Stats.Speed.ToString("F1")</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong><i class="fas fa-heart me-2" style="color: var(--gaming-secondary);"></i>Health:</strong></td>
                            <td class="text-end">
                                <span class="badge bg-warning">
                                    @Model.Profile.Stats.CurrentHealth / @Model.Profile.Stats.MaxHealth
                                </span>
                            </td>
                        </tr>
                    </table>
                    <div class="text-center mt-3">
                        <a asp-page="/Stats" class="btn btn-primary">
                            <i class="fas fa-chart-bar me-1"></i>View Full Stats
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-history me-2"></i>Recent Activity
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-gamepad fa-2x me-3" style="color: var(--gaming-primary);"></i>
                            <div>
                                <h5 class="mb-0">Total Matches</h5>
                                <p class="text-muted mb-0">You have participated in <strong style="color: var(--gaming-primary);">@Model.TotalMatches</strong> matches</p>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-clock fa-2x me-3" style="color: var(--gaming-accent);"></i>
                            <div>
                                <h5 class="mb-0">Play Time</h5>
                                <p class="text-muted mb-0">
                                    @{
                                        var totalHours = Model.TotalPlayTime / 3600;
                                        var totalMinutes = (Model.TotalPlayTime % 3600) / 60;
                                    }
                                    @if (totalHours > 0)
                                    {
                                        <text><strong style="color: var(--gaming-accent);">@totalHours hours @totalMinutes minutes</strong></text>
                                    }
                                    else
                                    {
                                        <text><strong style="color: var(--gaming-accent);">@totalMinutes minutes</strong></text>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <a asp-page="/History" class="btn btn-primary me-2">
                            <i class="fas fa-history me-1"></i>View Match History
                        </a>
                        <a asp-page="/Results" class="btn btn-success">
                            <i class="fas fa-trophy me-1"></i>Game Results
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
