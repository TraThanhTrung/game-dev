@page
@model GameServer.Areas.Player.Pages.ResultsModel
@{
    ViewData["Title"] = "Game Results";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-trophy me-2"></i>Game Results
    </h1>
</div>

@if (Model.GameResults.Any())
{
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Score</th>
                            <th>Enemies Killed</th>
                            <th>Deaths</th>
                            <th>Exp Gained</th>
                            <th>Gold Gained</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.GameResults)
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Game results feature will be available after Plan 3 implementation.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="fas fa-trophy fa-3x text-muted mb-3"></i>
            <p class="text-muted">
                <strong>Game Results feature is coming soon!</strong>
            </p>
            <p class="text-muted small">
                This feature depends on the GameResult entity from Plan 3, which tracks detailed game results
                including scores, enemies killed, deaths, experience gained, and gold earned.
            </p>
            <a asp-page="/History" class="btn btn-primary">
                <i class="fas fa-history me-1"></i>View Match History Instead
            </a>
        </div>
    </div>
}


