@page
@model GameServer.Areas.Player.Pages.HistoryModel
@{
    ViewData["Title"] = "Match History";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-history me-2"></i>Match History
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <span class="text-muted">Total: <strong>@Model.TotalMatches</strong> matches</span>
    </div>
</div>

@if (Model.MatchHistory.Any())
{
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Session ID</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Duration</th>
                            <th>Players</th>
                            <th>Status</th>
                            <th>Your Play Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var match in Model.MatchHistory)
                        {
                            <tr>
                                <td>
                                    <code class="small">@match.SessionId.ToString().Substring(0, 8)...</code>
                                </td>
                                <td>@match.StartTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    @if (match.EndTime.HasValue)
                                    {
                                        <text>@match.EndTime.Value.ToString("yyyy-MM-dd HH:mm:ss")</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (match.EndTime.HasValue)
                                    {
                                        var duration = match.EndTime.Value - match.StartTime;
                                        <text>@((int)duration.TotalMinutes)m @duration.Seconds</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@match.PlayerCount</span>
                                </td>
                                <td>
                                    @if (match.Status == "Completed")
                                    {
                                        <span class="badge bg-success">@match.Status</span>
                                    }
                                    else if (match.Status == "Active")
                                    {
                                        <span class="badge bg-primary">@match.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@match.Status</span>
                                    }
                                </td>
                                <td>
                                    @if (match.PlayDuration.HasValue)
                                    {
                                        var minutes = match.PlayDuration.Value / 60;
                                        var seconds = match.PlayDuration.Value % 60;
                                        <text>@minutes m @seconds s</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Match history pagination">
                    <ul class="pagination justify-content-center">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/History" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        }

                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-page="/History" asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/History" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
}
else
{
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="fas fa-history fa-3x text-muted mb-3"></i>
            <p class="text-muted">No match history found. Start playing to see your matches here!</p>
            <a asp-page="/Index" class="btn btn-primary">
                <i class="fas fa-home me-1"></i>Go to Dashboard
            </a>
        </div>
    </div>
}


